{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2021", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false
  },
  "include": [
    "src/**/*.ts", 
    "locales/**/*.ts", 
    // "test/**/*.ts", 
    "index.ts"
  ],
  "exclude": []
}
